<form>
	<table>
		<thead>
			<th>{{localize "GODICE_ROLLS.Prompt.Header_RollTerm"}}<a class="button" title="{{localize "GODICE_ROLLS.Tooltip.RollTerm"}}">
					<i class="fas fa-question-circle"></i></a>
			</th>
			<th>{{localize "GODICE_ROLLS.Prompt.Header_Rolls"}}<a class="button" title="{{localize "GODICE_ROLLS.Tooltip.Rolls"}}">
					<i class="fas fa-question-circle"></i></a>
			</th>
		</thead>
		<tbody>
			{{#each terms}}
			<tr>
				<td>{{faces}}</td>
				<td><input name="{{id}}-{{idx}}" type="number" min="1" max="{{term.faces}}" tabindex="1{{id}}{{idx}}" step="1"/>
					<script>
						console.log("{{id}}-{{idx}}");
						console.log("{{term.faces}}");
						input = document.getElementsByName("{{id}}-{{idx}}");
						console.log(input);
						roll = parseInt("{{term.faces}}",10);
						console.log(roll);
						input[0].value = roll;
						console.log(input);
					</script>
				</td>
			</tr>
			{{/each}}
		</tbody>
		<tfoot>
			<tr>
				<td colspan="3" style="padding:0">
					<button type="submit" style="width:100%" name="submit" tabindex="300">
						<i class="fas fa-dice-d20"></i>{{localize "GODICE_ROLLS.Submit"}}</button>
				</td>
			</tr>
		</tfoot>
	</table>
</form>